<% include ./header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Shopping Cart</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
               <img class="img-responsive" src="<%= product.image %>"> 
               <div class="caption-full">
                   <h4 class="pull-right">Discount Percentage = <%= product.discountPercentage %></h4>
                   <h4><a><%= product.name %></a></h4>
                   <p>Product Rating = <%= product.rating %></p>
                   
                   
               </div>
            </div>
            
           
            
        </div>
    </div>
</div>











